<odoo>
    <data>

        <record model="ir.ui.view" id="brodoonx.events_list">
            <field name="name">Brodoonx Events</field>
            <field name="model">brodoonx.events</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="init_date"/>
                    <field name="fin_date"/>
                </tree>
            </field>
        </record>

        <record id="brodoonx.events_view_calendar" model="ir.ui.view">
            <field name="name">brodoonx.events.view.calendar</field>
            <field name="model">brodoonx.events</field>
            <field name="arch" type="xml">
                <calendar string="Events Calendar" date_start="init_date" date_stop="fin_date" color="name">
                    <field name="name" />
                </calendar>
            </field>
        </record>

    </data>
</odoo>