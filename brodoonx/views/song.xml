<odoo>
    <data>
        <record model="ir.ui.view" id="brodoonx.song_list">
            <field name="name">Brodoonx Songs</field>
            <field name="model">brodoonx.song</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="duration" sum="Total Duration"/>
                    <field name="views" sum="Total Views"/>
                    <field name="musical_genre" widget='many2many_tags'/>
                    <field name="discography"/>
                    <field name="singers"/>
                    <field name="producers"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="brodoonx.song_form">
            <field name="name">Brodoonx Songs Form</field>
            <field name="model">brodoonx.song</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <separator string="Song Info"></separator>
                                <field name="name"/>
                                <field name="duration" sum="Total Duration"/>
                                <field name="views" sum="Total Views"/>
                                <field name="discography"/>
                            </group>
                            <group>
                                <notebook>
                                    <page string="Musical Genres">
                                        <field name="musical_genre">
                                            <tree>
                                                <field name="name" />
                                                <field name="audience" />
                                            </tree>
                                        </field>
                                    </page>
                                    <page string="Singers">
                                        <field name="singers">
                                            <tree>
                                                <field name="name"/>
                                                <field name="level"/>
                                            </tree>
                                        </field>
                                    </page>
                                    <page string="Producers">
                                        <field name="producers">
                                            <tree>
                                                <field name="name"/>
                                                <field name="level"/>
                                            </tree>
                                        </field>
                                    </page>
                                </notebook>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
