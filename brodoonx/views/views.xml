<odoo>
  <data>
    <!-- explicit list view definition -->

    <!---  [[[[[[[[[[[[[[[[[ ACTIONS ]]]]]]]]]]]]]]]]]]]]] -->
    <!-- actions opening views on models -->

    <record model="ir.actions.server" id="brodoonx.action_server">
      <field name="name">Set/Update premium</field>
      <field name="model_id" ref="model_res_partner"/>
      <field name="binding_model_id" ref="model_res_partner" />
      <field name="state">code</field>
      <field name="code">model.apply_premium_action(records)</field>
    </record>

    <!-- ################ PLAYER ############### -->
    <record model="ir.actions.act_window" id="brodoonx.action_player_window">
      <field name="name">Brodoonx Players</field>
      <field name="res_model">res.partner</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{'search_default_player_partner':1,'default_is_player':True}</field>
      <field name="view_ids" eval="[
      (5, 0, 0),
      (0, 0, {'view_mode': 'tree', 'view_id': ref('brodoonx.player_list')}),
      (0, 0, {'view_mode': 'form', 'view_id': ref('brodoonx.player_form')}),
      ]" />
    </record>

    <record model="ir.actions.act_window" id="brodoonx.player_progress_action_window">
      <field name="name">Brodoonx player_progress</field>
      <field name="res_model">brodoonx.player_progress</field>
      <field name="view_mode">tree,form,graph</field>
    </record>

    <!-- ####################################### -->
    <!-- ################ DISCOGRAPHY ############### -->
    <record model="ir.actions.act_window" id="brodoonx.action_discography_window">
      <field name="name">Brodoonx Discographies</field>
      <field name="res_model">brodoonx.discography</field>
      <field name="view_mode">tree,form</field>
    </record>
    <!-- ####################################### -->

    <!-- ################ Artist ############### -->
    <record model="ir.actions.act_window" id="brodoonx.action_artist_window">
      <field name="name">Brodoonx Artist</field>
      <field name="res_model">brodoonx.artist</field>
      <field name="view_mode">tree,form,kanban</field>
    </record>
    <!-- ####################################### -->
    <!-- ################ SONG ############### -->
    <record model="ir.actions.act_window" id="brodoonx.action_song_window">
      <field name="name">Brodoonx Songs</field>
      <field name="res_model">brodoonx.song</field>
      <field name="view_mode">tree,form</field>
    </record>
    <!-- ####################################### -->
    <!-- ################ MUSICAL GENRE ############### -->
    <record model="ir.actions.act_window" id="brodoonx.action_musical_genre_window">
      <field name="name">Brodoonx Musical Genres</field>
      <field name="res_model">brodoonx.musical_genre</field>
      <field name="view_mode">tree,form</field>
    </record>
    <!-- ####################################### -->
    <!-- ################ COUNTRY ############### -->
    <record model="ir.actions.act_window" id="brodoonx.action_country_window">
      <field name="name">Brodoonx Countries</field>
      <field name="res_model">brodoonx.country</field>
      <field name="view_mode">tree,form</field>
    </record>
    <!-- ################ EVENTS ############### -->
    <record model="ir.actions.act_window" id="brodoonx.action_events_window">
      <field name="name">Brodoonx Events</field>
      <field name="res_model">brodoonx.events</field>
      <field name="view_mode">tree,form,calendar</field>
    </record>

    <!-- ################ Fights ############### -->
    <record model="ir.actions.act_window" id="brodoonx.action_battle_window">
      <field name="name">Brodoonx Battle</field>
      <field name="res_model">brodoonx.battle</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Top menu item -->

    <menuitem name="brodoonx" id="brodoonx.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Management" id="brodoonx.menu_1" parent="brodoonx.menu_root"/>
    <menuitem name="Battles" id="brodoonx.menu_2" parent="brodoonx.menu_root"/>

    <!-- <menuitem name="Menu 2" id="brodoonx.menu_2" parent="brodoonx.menu_root"/> -->

    <!-- actions -->

    <menuitem name="Players" id="brodoonx.menu_player_list" parent="brodoonx.menu_1" action="brodoonx.action_player_window"/>
    <menuitem name="Discographies" id="brodoonx.menu_discographies_list" parent="brodoonx.menu_1" action="brodoonx.action_discography_window"/>
    <menuitem name="Artists" id="brodoonx.menu_artist_list" parent="brodoonx.menu_1" action="brodoonx.action_artist_window"/>
    <menuitem name="Songs" id="brodoonx.menu_songs_list" parent="brodoonx.menu_1" action="brodoonx.action_song_window"/>
    <menuitem name="Musical Genres" id="brodoonx.menu_musical_genres_list" parent="brodoonx.menu_1" action="brodoonx.action_musical_genre_window"/>
    <menuitem name="Countries" id="brodoonx.menu_countries_list" parent="brodoonx.menu_1" action="brodoonx.action_country_window"/>
    <menuitem name="Events" id="brodoonx.menu_events_list" parent="brodoonx.menu_1" action="brodoonx.action_events_window"/>

    <!-- <menuitem name="Server to list" id="brodoonx" parent="brodoonx.menu_2" action="brodoonx.action_server"/> -->
    <menuitem name="Fights List" id="brodoonx.menu_fights_list" parent="brodoonx.menu_2" action="brodoonx.action_battle_window"/>


  </data>
</odoo>